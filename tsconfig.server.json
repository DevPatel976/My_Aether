{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "allowJs": true
  },
  "ts-node": {
    "transpileOnly": true,
    "files": true
  },
  "include": ["src/server.ts", "src/server/**/*", "src/lib/**/*"],
  "exclude": ["node_modules", "dist"]
}
